# AutoDataSetBuilder Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# MinIO (S3-compatible Object Storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_DEFAULT_BUCKETS=raw,processed,shards
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=autods_user
POSTGRES_PASSWORD=autods_password
POSTGRES_DB=autods_db
DB_HOST=localhost
DB_PORT=5432
DB_URL=postgresql://autods_user:autods_password@localhost:5432/autods_db

# ============================================
# Label Studio
# ============================================
LABEL_STUDIO_SECRET_KEY=insecure_dev_key
LABEL_STUDIO_URL=http://localhost:8080

# ============================================
# Application Settings
# ============================================
LOG_LEVEL=INFO
DEBUG=False
ENVIRONMENT=development

# ============================================
# AWS/Cloud Configuration (Production)
# ============================================
# AWS_ACCESS_KEY_ID=your_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_here
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ============================================
# Feature Flags
# ============================================
ENABLE_GPU=False
ENABLE_DISTRIBUTED_PROCESSING=False
ENABLE_CACHING=True

# ============================================
# Performance Settings
# ============================================
BATCH_SIZE=100
WORKER_THREADS=4
CACHE_TTL=3600

# ============================================
# API Keys (if needed)
# ============================================
# OPENAI_API_KEY=your_key_here
# HUGGINGFACE_API_KEY=your_key_here
